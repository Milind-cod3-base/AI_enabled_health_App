                    font_size: "12dp"

                MDSwitch:
                    id: Checkout
                    on_release:
                        root.modelOff()              
                MDLabel:
                    text: "Check-out"
                    font_size: "12dp"
                MDSwitch:
                    id: Notifications
                    on_release:
                        root.pauseNotif()

