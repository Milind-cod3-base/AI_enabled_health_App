
WindowManager:

    
    LoginWindow:

    CreateAccountWindow:

    MainWindow:

    SettingMain:

    SettingProfile:

    SettingNotif:

    Graph:



<LoginWindow>:

    name: "login" # name of the window is login

    username: username
    password: password

    FloatLayout:

        Label:
            text: "Username: "
            font_size: (root.width**2 + root.height**2)/ 13**4
            pos_hint: {"x":0.1, "top":0.9}
            size_hint: 0.35,0.15

        TextInput:
        
            id: username
            multiline: False
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint:{"x":0.45, "top":0.9}
            size_hint: 0.4, 0.15

        Label:
            text: "Passcode: "
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint:{"x":0.1, "top":0.7}
            size_hint: 0.35, 0.15

        TextInput:
            id: password
            multiline: False
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint:{"x":0.45, "top":0.7}
            size_hint: 0.4, 0.15

        Button:

            text: "Sign in"
            font_size: (root.width**2 + root.height**2) / 13**4
            pos_hint:{"x":0.3, "y":0.05}
            size_hint: 0.4, 0.1
            on_release: 
                root.manager.transition.direction = "up"  # here root is login window
                root.loginBtn()

        Button:
            text: "Don't have an account? Create one!"
            font_size: (root.width**2 + root.height**2) / 15**4
            pos_hint:{"x":0.3, "y":0.3}
            size_hint: 0.4, 0.1
            on_release:
                root.manager.transition.direction = "right"
                root.createBtn()


<CreateAccountWindow>:
    name: "create"

    username: username
    password: password
    confirm: confirm

    FloatLayout:
        cols:1
        
        FloatLayout:
            size: root.width, root.height/2  # dimensions of first float

            Label:
                text: "Create an Account"
                size_hint: 0.8, 0.2
                pos_hint:{"x":0.1, "top": 1}
                font_size: (root.width**2 + root.height**2) / 14**4 

            Label:
                
                text: "Username: "
                size_hint: 0.5, 0.12
                pos_hint:{"x":0, "top": 0.8}
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
            
                id: username
                multiline: False
                size_hint: 0.4, 0.12
                font_size: (root.width**2 + root.height**2) / 14**4  
                pos_hint: {"x":0.5, "top":0.8}

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top": 0.6}
                text: "Password: "
                font_size: (root.width**2 + root.height**2) / 14**4

            TextInput:
                
                id: password
                pos_hint: {"x":0.5, "top":0.6}
                size_hint: 0.4, 0.12
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

            Label:
                size_hint: 0.5,0.12
                pos_hint: {"x":0, "top": 0.4}
                text: "Confirm Password: "
                font_size: (root.width**2 + root.height**2) / 14**4
            
            TextInput:
                
                id: confirm
                pos_hint: {"x":0.5, "top":0.4}
                size_hint: 0.4, 0.12
                multiline: False
                password: True
                font_size: (root.width**2 + root.height**2) / 14**4

            Button:
                text: "Already have an Account? Log In!"
                pos_hint:{"x":0.3, "y":0.12}
                size_hint: 0.4,0.1
                font_size: (root.width **2 + root.height **2) / 16**4 
                on_release: 
                    root.manager.transition.direction = "left"
                    root.login()   # moving to login window


            Button:
                text: "Submit"
                pos_hint: {"x":0.38, "y": 0.02}
                size_hint: 0.3, 0.08
                font_size: (root.width**2 + root.height**2) / 14**4
                on_release:
                    root.manager.transition.direction = "left"
                    root.submit()

<MainWindow>:
    name: "mainW"

    FloatLayout:
        cols:1
        FloatLayout:
            cols: 2
            size: root.width, root.height/3
            

            Button:
                text: "Check in"
                size_hint: 0.2,0.1
                font_size: (root.width **2 + root.height **2) / 15**4 
                pos_hint: {"x":0.05,"top":0.95}
                on_release: 
                    # also can give a pop up that model has started working
                    root.modelOn()
            
            Button:
                text: "Check out"
                size_hint: 0.2,0.1
                font_size: (root.width **2 + root.height **2) / 15**4 
                pos_hint: {"right":0.95,"top":0.95}
                on_release:
                    root.modelOff()

        FloatLayout:
            cols:1
            size: root.width, root.height/3

            Label:
                text: "Motivational task"
                size_hint: 0.8,0.3
                font_size: (root.width **2 + root.height **2) / 15**4
                pos_hint: {"x":0.01, "top":0.9}
                
        FloatLayout:
            cols:2
            size: root.width, root.height/3
            Button:
                text: "Pause"
                size_hint: 0.2,0.1
                font_size: (root.width **2 + root.height **2) / 15**4 
                pos_hint: {"x":0.05,"top":0.65}
                on_release: 
                    # also can give a pop up that model has started working
                    root.pauseNotif()
            
            Button:
                text: "Remind Me"
                size_hint: 0.2,0.1
                font_size: (root.width **2 + root.height **2) / 15**4 
                pos_hint: {"right":0.95,"top":0.65}
                on_release:
                    root.remindMe()

        FloatLayout:
            cols:1

            Button:

                text: "Graph"
                size_hint: 0.2,0.1
                font_size: (root.width **2 + root.height **2) / 15**4 
                pos_hint: {"x":0.40,"top":0.40}
                on_release: 
                    root.manager.transition.direction = "left"
                    root.scale()  # method for going to graph window
        
        FloatLayout:
            cols:1

            Button:

                text: "Setting"
                size_hint: 0.2,0.1
                font_size: (root.width **2 + root.height **2) / 15**4 
                pos_hint: {"x":0.40,"top":0.20}
                on_release: 
                    root.manager.transition.direction = "left"
                    root.set()  # method for going to setting window
        
<SettingMain>:
    name: "settingM"

    Button:
        text: "Notification settings"
        size_hint: 0.4,0.1
        font_size: (root.width **2 + root.height **2) / 15**4 
        pos_hint: {"x":0.30,"top":0.80}
        on_release: 
            root.manager.transition.direction = "left"
            root.notif()  # going to notification setting window
    
    
    Button:
        text: "Profile settings"
        size_hint: 0.4,0.1
        font_size: (root.width **2 + root.height **2) / 15**4 
        pos_hint: {"x":0.30,"top":0.60}
        on_release: 
            root.manager.transition.direction = "left"
            root.prof()  # going to profile setting window

    
    Button:
        text: "Logout"
        size_hint: 0.4,0.1
        font_size: (root.width **2 + root.height **2) / 15**4 
        pos_hint: {"x":0.30,"top":0.40}
        on_release: 
            root.manager.transition.direction = "right"
            root.login()  # going to profile setting window

    Button: 
        text: "Back"
        size_hint: 0.4,0.1
        font_size: (root.width **2 + root.height **2) / 15**4 
        pos_hint: {"x":0.30,"top":0.20}
        on_release: 
            root.manager.transition.direction = "right"
            root.back()  # going to profile setting window



